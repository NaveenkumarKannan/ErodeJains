<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llChild1"
        android:gravity="center"
        android:background="@drawable/gradient"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/ivChildPhoto1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape1"
                    android:src="@drawable/profile1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvChildName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvWifeName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Wife Name"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvMobNo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Mob"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvGrand1Child1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Grand Child 1"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvGrand2Child1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Grand Child 2"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvGrand3Child1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Grand Child 3"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />
                    <TextView
                        android:id="@+id/tvGrand4Child1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Grand Child 4"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>