<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".child1Activity"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/galada"
                    android:text="Find Family"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:text="Child 1 Details"
                android:id="@+id/tvCountChild"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:background="#78ffffff"
                android:padding="10dp"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Enter the details"
                android:textColor="#f7f7f7"
                android:textSize="25dp"
                android:textStyle="bold|italic" />
            <ImageView
                android:id="@+id/ivChildPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvChildPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="5dp"
                android:hint="Select/Capture Photo"
                android:background="@drawable/shape4"
                android:padding="10dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etChildName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:fontFamily="serif"
                    android:hint="Name"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:background="@drawable/shape4"
                    android:fontFamily="serif"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="Blood Group"
                    android:padding="10dp"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/etWifeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Wife Name"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:layout_weight="1"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgWife"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:hint="Blood Group"
                    android:background="@drawable/shape4"
                    android:padding="10dp"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>
            <EditText
                    android:singleLine="true"
                android:id="@+id/etChildMobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="5dp"
                android:hint="Mobile number"
                android:inputType="phone"
                android:background="@drawable/shape4"
                android:padding="10dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />
            <EditText
                    android:singleLine="true"
                android:id="@+id/etHomeMobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:hint="Home Mobile Number"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape4"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:inputType="phone"
                android:textSize="16sp"
                android:textStyle="italic|bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etGsonDtr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="G.Son/Dtr"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgGsonDtr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="Blood Group"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etGsonDtr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="G.Son/Dtr"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgGsonDtr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="Blood Group"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etGsonDtr3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="G.Son/Dtr"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgGsonDtr3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="Blood Group"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etGsonDtr4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="G.Son/Dtr"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etBgGsonDtr4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:hint="Blood Group"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape4"
                    android:textColor="#595959"
                    android:textColorHint="#595959"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Child"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                android:background="@drawable/add_child_button"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center"
                android:onClick="nextPage"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>