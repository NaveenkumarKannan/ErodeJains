<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/galada"
                    android:text="Find Family"
                    android:gravity="center"
                    android:drawableLeft="@drawable/backk"
                    android:drawablePadding="5dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:onClick="goBack"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Enter address details"
                android:textColor="#f7f7f7"
                android:textSize="25dp"
                android:textStyle="bold|italic" />


            <EditText
                android:id="@+id/etOfficeAddress"
                android:hint="Office Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="top"
                android:minLines="3"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape4"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold"  />

            <EditText
                    android:singleLine="true"
                android:id="@+id/etOfficePhNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:hint="Office Phone number"
                android:background="@drawable/shape4"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/etResidenceAddress"
                android:hint="Residence Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="top"
                android:minLines="3"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape4"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />
            <EditText
                    android:singleLine="true"
                android:id="@+id/etResidencePhNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="1dp"
                android:hint="Residence Phone Number"
                android:background="@drawable/shape4"
                android:padding="10dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />
            <EditText
                    android:singleLine="true"
                android:id="@+id/etNoOfChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="1dp"
                android:hint="No.of children:0/1/2/3"
                android:background="@drawable/shape4"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />
            <EditText
                    android:singleLine="true"
                android:id="@+id/etGroup_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginTop="1dp"
                android:hint="Group: 1/2/3/4/5"
                android:background="@drawable/shape4"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#595959"
                android:textColorHint="#595959"
                android:textSize="16sp"
                android:textStyle="italic|bold" />

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                android:background="#79000000"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center"
                android:onClick="nextPage"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>